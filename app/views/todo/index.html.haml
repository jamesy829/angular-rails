%h1 Todo#index

%div{'ng-controller' => 'TodoCtrl'}
  %form{'ng-submit' => 'addTask()'}
    %input{type: 'text', 'ng-model' => 'newTask.text'}
    %input{type: 'submit', value: 'Add'}

  %span {{remaining()}} of {{tasks.length}} remaining
  [
  %a{href: '#', 'ng-click' => 'archive()'} archive
  ]

  %ul{style: 'list-style: none;'}
    %li{'ng-repeat' => 'task in tasks'}
      %input{type: 'checkbox', 'ng-model' => 'task.completed', 'ng-click' => 'mark(task)'}
      %span{class: 'done-{{task.completed}}'}{{task.text}}

:css
  .done-true {
    text-decoration: line-through;
    color: grey;
  }
